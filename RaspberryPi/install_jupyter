#!/bin/bash
cd ~

echo "testing sudo"
echo "apt update"
apt update
echo "sudo apt update"
sudo apt update
echo "testing sudo 2"
echo "touch file"
apt touch file
echo "sudo touch sudofile"
sudo touch sudofile
ls -hal
rm sudofile
rm file

echo "NOTA BENE: the proces takes very long"
echo "start proces"
sudo apt update
sudo apt install -y git
sudo sed -i -e 's/CONF_SWAPSIZE=100/CONF_SWAPSIZE=2048/' /etc/dphys-swapfile
sudo /etc/init.d/dphys-swapfile stop
sudo /etc/init.d/dphys-swapfile start
git clone https://github.com/kleinee/jns
cd ~/jns/scripts
sudo ./prep.sh
./inst_stack.sh
./conf_jupyter.sh
./inst_lab_ext.sh
jupyter notebook password
sudo ./inst_tex.sh
sudo ./inst_julia-1.1.0.sh
sudo ./inst_R-3.6.0.sh
./inst_sqlite.sh
echo "skipped ./inst_pi_hardware.sh"
sudo ./conf_service.sh
