echo "" >> /home/$(logname)/.bashrc
echo "" >> /home/$(logname)/.bashrc
echo "" >> /home/$(logname)/.bashrc
echo "# >>> conda initialize >>>" >> /home/$(logname)/.bashrc
echo "# !! Contents within this block are managed by 'conda init' !!" >> /home/$(logname)/.bashrc
echo "__conda_setup="$('/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"" >> /home/$(logname)/.bashrc
echo "if [ $? -eq 0 ]; then" >> /home/$(logname)/.bashrc
echo "    eval "$__conda_setup"" >> /home/$(logname)/.bashrc
echo "else" >> /home/$(logname)/.bashrc
echo "    if [ -f "/opt/miniconda3/etc/profile.d/conda.sh" ]; then" >> /home/$(logname)/.bashrc
echo "        . "/opt/miniconda3/etc/profile.d/conda.sh"" >> /home/$(logname)/.bashrc
echo "    else" >> /home/$(logname)/.bashrc
echo "        export PATH="/opt/miniconda3/bin:$PATH"" >> /home/$(logname)/.bashrc
echo "    fi" >> /home/$(logname)/.bashrc
echo "fi" >> /home/$(logname)/.bashrc
echo "unset __conda_setup" >> /home/$(logname)/.bashrc
echo "# <<< conda initialize <<<" >> /home/$(logname)/.bashrc
